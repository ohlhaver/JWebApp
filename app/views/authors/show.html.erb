<div class='news_group'>
  <div class='news_block'>
    <h2>
      <%= @author.name %>
      <span class='links'>
        <%= render_author_subscription( @author_preference, @author ) %>
      </span>
      <span class='links'>
        <%= render_author_rating_form( @author_preference, @author ) %>
      </span>
    </h2>
    <% @stories.each do |story| %>
      <div class='story'>
        <div class='headline'><%= render_story_preview( story, :without => [ :authors ] ) %></div>
      </div>
    <% end %>
    <% if @stories.empty? %>
      <em><%= t( 'stories.not.found' ) %></em>
    <% end %>
  </div>
</div>
<%= render_pagination( @stories ) %>
