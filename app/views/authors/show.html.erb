<div class='news_group'>
  <div class='news_block'>
    <h2>
      <%= @author.name %>
      <div class='rater'>
	    <%= render_author_subscription( @author_preference, @author ) %>
        <%= render_author_rating_form( @author_preference, @author ) %>
      </div>
    </h2>
    <% @stories.each do |story| %>
      <div class='cluster'>
        <div class='headline'><%= render_headline_preview( story, :without => [ :authors ] ) %></div>
      </div>
    <% end %>
    <% if @stories.empty? %>
		<br>
       <h2><span><%= t( 'stories.not.found' ) %></h2></span>
    <% end %>
  </div>
</div>
<%= render_pagination( @stories ) %>
