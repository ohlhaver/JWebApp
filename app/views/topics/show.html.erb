<% form_url = topic_path( @topic ) %>
<% form_method = :get %>
<div class='news_group'>
  <div class='news_block'>
    <h2>
      <%= t('navigation.main.my_topics' )%>: <%= @topic.name -%>
      <span class='links'><%= render_filter_links( @topic.facets, form_url, form_method ) %></span>
      <span class='links'><%= render_search_preference_form( :sort_criteria, :subscription_type, :form_url => form_url, :form_method => form_method  ) %></span>
    </h2>
    <% @topic.stories.each do |story| %>
      <div class='cluster'>
        <% if story.cluster && story.cluster.stories.any? %>
          <%= render_cluster_preview( story.cluster, story ) %>
        <% else %>
          <%= render_story_search_preview( story ) %>
        <% end %>
      </div>
    <% end %>
    <% if @topic.stories.empty? %>
      <em><%= t( 'stories.not.found' ) %></em>
    <% end %>
  </div>
</div>
<%= render_pagination( @topic ) %>