<% content_for :user_actions do -%>
  <% if logged_in? -%>
    <br> <%= link_to( t( 'navigation.top.logout', :name => current_user.name ), logout_path ) %> 

  <% else -%>
    <br> <%= link_to( t( 'navigation.top.login' ), login_path ) -%> - <%= link_to( t('navigation.top.register' ), account_path( :action => 'new' ) )%>
  <% end %>
<% end %>


  <%= link_to( t( 'navigation.top.reading_list' ), :controller => '/reading_list', :action => 'index' ) -%> <br>
  <%= link_to( t( 'navigation.top.settings' ), account_path( :jwa => 1, :edition => session[:edition] ) ) -%>
<% if logged_in? -%><% unless current_user.power_plan? %> - <%= link_to( t('navigation.top.upgrade'), account_path( :action => 'power_plan', :jar => 1) ) %>
  <% end %><% end %>
  <%= yield :user_actions -%>
