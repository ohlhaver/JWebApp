<span class='stars' title='<%=  t('stars.info', :count => count.to_i, :average => (average.to_f * 100).round/100.00 ) %> '>
<% if count.nil? || count == 0 %>
  <%= image_tag( 'nostar.png' )*3 -%>
<% elsif average <= 1.0 %>
  <%= image_tag( 'star.png' ) -%><%= image_tag( 'nostar.png' )*2 %>
<% elsif average <= 2.0 %>
  <%= image_tag( 'star.png' )*2 -%><%= image_tag( 'nostar.png' ) %>
<% else %>
  <%= image_tag( 'star.png' )*3 -%>
<% end %>
</span>