<% mouse_over( :dialog ) do | dialogEventClass, dialogItemClass | %>
<div class='news_block <%= dialogEventClass -%>'>
  <h2>
    <%= link_to  t("navigation.main.#{block.name}"), section_path( block.id ) %>
    <span class='dialogBox <%= dialogItemClass%>'>
      <%= link_to( image_tag('up.gif'), up_section_path( :id => block.id ) ) %>
      <%= link_to( t('prefs.home_action.up'), up_section_path( :id => block.id ) ) %>
	  &nbsp;&nbsp;
	  <%= link_to( image_tag('down.gif'), down_section_path( :id => block.id ) ) %>
      <%= link_to( t('prefs.home_action.down'), down_section_path( :id => block.id ) ) %>
	  &nbsp;&nbsp;
	  <%= link_to( image_tag('close.gif'), section_path( :id => block.id ), :method => :delete, :confirm => 'Are you sure?' ) %>
	  <%= link_to( t('prefs.home_action.delete'), section_path( :id => block.id ), :method => :delete, :confirm => 'Are you sure?' ) %>
    </span>
  </h2>
  <% if block.opinions? %>
    <% block.stories.each do |story| %>
      <div class='cluster'>
        <%= render_story_preview( story ) %>
      </div>
    <% end %>
  <% else %>
    <% block.clusters.each do |cluster| %>
      <div id='cluster_<%= cluster.id -%>' class='cluster'>
        <%= render_cluster_preview( cluster ) %>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>