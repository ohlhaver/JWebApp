<span class='title'><%= link_to( story.title, story.url, :target => '_BLANK' )%></span>
<span class='separator first'>-</span>
<% if story.source %>
  <span class='source fs80'><%= link_to( story.source.name, source_path( story.source ) ) %></span>
  
<% end %>
<% if story.authors.any? && !hide_authors %>
<span class='separator'>-</span>
  <% story.authors.each do |author| %>
    <span class='author fs80'><%= link_to( author.name, author_path( author ) ) -%></span>
    <span class='separator'> </span>
  <% end %>
<% end %>
<% if !hide_add_to_reading_list %>
  <span class='fs80'><%= link_to( t('prefs.label.add_to_reading_list'), { :controller => '/reading_list', :action => :create, :id => story.id }, :method => :post ) %>
<% end %>