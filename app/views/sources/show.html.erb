<div class='news_group'>
  <div class='news_block'>
    <h2><span class="page_label">
      <%= @source.name %>
	</span>

        <%= render_source_rating_form( @source_preference, @source) %>

    </h2>
    <% if @categories.any? %>
<br>
    <div class ='result_filter'>
      <%= render_category_links( @categories, source_path( @source ) ) %>
    </div>
    <% end %>


    <% @stories.each do |story| %>
      <div class='cluster'>
        <div class='headline'><%= render_headline_preview( story ) %></div>
      </div>
    <% end %>
    <% if @stories.empty? %>
		<br>
       <h2><span><%= t('stories.not.found')%></span></h2>
    <% end %>
  </div>
</div>
<%= render_pagination( @stories ) %>