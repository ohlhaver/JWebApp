<div class='news_group'>
  <div class='news_block'>
    <h2>
      <%= @source.name %>
      <span class='links'>
        <%= render_source_rating_form( @source_preference, @source) %>
      </span>
    </h2>
    <% if @categories.any? %>
    <h4>
      <%= render_category_links( @categories, source_path( @source ) ) %>
    </h4>
    <% end %>
    <% @stories.each do |story| %>
      <div class='story'>
        <div class='headline'><%= render_story_preview( story ) %></div>
      </div>
    <% end %>
    <% if @stories.empty? %>
      <em><%= t( 'stories.not.found' ) %></em>
    <% end %>
  </div>
</div>
<%= render_pagination( @stories ) %>